{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
		],
		"paths": {
			"@/*": ["/src/*"],
			"@atoms/*": ["src/atoms/*"],
			"@molecules/*": ["src/molecules/*"],
			"@organisms/*": ["src/organisms/*"],
			"@pages/*": ["src/pages/*"],
			"@templates/*": ["src/templates/*"],
			"@composables/*": ["src/composables/*"],
			"@apptypes/*": ["src/apptypes/*"],
			"@interfaces/*": ["src/interfaces/*"],
			"@utils/*": ["src/utils/*"]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules"
	]
}
